<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 500px;"></div>
<h1>All Campsites</h1>
<div>
    <a href="/campsites/new">Add Campsite</a>
</div>
<% for(let campsite of campsites) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if(campsite.images.length) {%> 
                <img class="img-fluid" src="<%= campsite.images[0].url %>" >
                <% }else {%>
                    <img class="img-fluid" src="https://res.cloudinary.com/dj9ptiru6/image/upload/v1638936227/Camp/zkwvcb5bunpmn7swqj5i.jpg" alt="">
                <% } %>  
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campsite.title %></h5>
                    <p class="card-text"><%= campsite.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= campsite.location %></small>
                    </p>
                    <a class="btn btn-primary" href="/campsites/<%= campsite._id %> ">View <%= campsite.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>

<script>
    const token = '<%= process.env.MAPBOX_TOKEN %>';
    const campsites =  {features: <%- JSON.stringify(campsites) %>}
</script>

<script src="/js/clusterMap.js"></script>